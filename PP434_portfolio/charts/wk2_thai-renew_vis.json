{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Thailand's Renewable Energy Production Grows Steadily",
    "anchor": "start",
    "subtitle": ["Output increases from 5,000 to 30,000GWh, representing 6Ã— growth over 30 years","","GWh (Thousands)"]
  },
  "height": 200,
  "width": 300,
  "autosize": {"type": "fit", "contains": "padding", "resize": false},
  "background": "#ffffff",
  "view": {"fill": "#ffffff", "strokeOpacity": 0},
  "data": {
    "url": "https://api.economicsobservatory.com/tha/rGWh?vega",
    "format": {"type": "json"}
  },
  "transform": [{"calculate": "datum['value']/1000", "as": "output"}],
  "layer": [
    {
      "mark": {"type": "line", "strokeWidth": 2}
    },
    {
      "transform": [{"filter": {"param": "hover", "empty": false}}],
      "mark": {"type": "point", "size": 100, "filled": true}
    },
    {
       "mark": "rule",
      "encoding": {
        "opacity": {
          "condition": {"value": 0.3, "param": "hover", "empty": false},
          "value": 0
        }
      },
      "params": [
        {
          "name": "hover",
          "select": {
            "type": "point",
            "fields": ["date"],
            "nearest": true,
            "on": "pointerover",
            "clear": "pointerout"
          }
        }
      ]
    }
  ],
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": "", "grid": false}
    },
    "y": {
      "field": "output",
      "type": "quantitative",
      "scale": {"domain": [0, 70]},
      "axis": {
        "title": "",
        "grid": false
      }
    },
    "tooltip": [
      {"field": "date", "type": "temporal", "title": "Year", "timeUnit": "year"},
      {"field": "output", "type": "quantitative", "title": "Output (GWh, Thousands)", "format": ".2f"}
    ]
  },
  "config": {}
}