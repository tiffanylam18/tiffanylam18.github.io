{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 350,
  "height": 250,
  "title": {
    "text": "Singapore's Warming Trend",
    "subtitle": "Daily mean temperatures, 2014-2024",
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tiffanylam18/tiffanylam18.github.io/refs/heads/main/PP434_portfolio/data/wk6_temp_SG.json",
    "format": {"type": "json", "property": "daily"}
  },
  "transform": [
    {"flatten": ["time", "temperature_2m_mean"]},
    {"filter": "datum.temperature_2m_mean != null"},
    {"calculate": "toDate(datum.time)", "as": "date"}
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "color": "#FF6347",
        "strokeWidth": 1,
        "opacity": 0.6
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {"title": null, "grid": false}
        },
        "y": {
          "field": "temperature_2m_mean",
          "type": "quantitative",
          "scale": {"domain": [16, 34]},
          "axis": {"title": "", "labelExpr": "datum.value + 'Â°C'"}
        }
      }
    },
    {
      "mark": {"type": "line", "color": "#8B0000", "strokeWidth": 3},
      "transform": [
        {"loess": "temperature_2m_mean", "on": "date", "bandwidth": 0.1}
      ],
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {"field": "temperature_2m_mean", "type": "quantitative"}
      }
    }
  ],
  "config": {
    "background": "#ffffff",
    "font": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
    "view": {"stroke": "transparent"},"title": {
      "font": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "fontSize": 18,
      "fontWeight": 600,
      "color": "#1e293b",
      "anchor": "start",
      "subtitleFontSize": 14,
      "subtitleColor": "#475569","subtitleFontWeight": 400
      },
    "axis": {
      "labelFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "labelFontSize": 11,
      "labelColor": "#64748b",
      "titleFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "titleFontSize": 12,
      "titleColor": "#334155",
      "grid": false,
      "gridColor": "#e2e8f0",
      "gridOpacity": 0.5,
      "domain": true,
      "ticks": true
      },
    "legend": {
      "labelFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "labelFontSize": 11,
      "labelColor": "#475569",
      "titleFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "titleFontSize": 12,
      "titleColor": "#334155"
    }
  }
}