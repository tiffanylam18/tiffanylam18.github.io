{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 700,
  "height": 500,
  "title": {
    "text": "Four Decades of Minimal Progress Across the Coral Triangle",
    "subtitle": "Most countries remain below 1% marine protection by 2019",
    "anchor": "start"
  },
  "projection": {
    "type": "mercator",
    "center": [133, 2],
    "scale": 460
  },
  "params": [
    {
      "name": "yearSlider",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1977,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {"sphere": true},
      "mark": {"type": "geoshape", "fill": "aliceblue"}
    },
    {
      "data": {
        "url": "https://vega.github.io/vega-datasets/data/world-110m.json",
        "format": {"type": "topojson", "feature": "countries"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "#bebebe",
        "stroke": "white",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tiffanylam18/tiffanylam18.github.io/refs/heads/main/PP434_project/data/chart1_ct_choro.geojson",
        "format": {"type": "json", "property": "features"}
      },
      "transform": [
        {"filter": "datum.properties != null && datum.properties.STATUS_YR <= yearSlider"},
        {
          "joinaggregate": [{
            "op": "max",
            "field": "properties.STATUS_YR",
            "as": "maxYear"
          }],
          "groupby": ["properties.country_name"]
        },
        {"filter": "datum.properties.STATUS_YR == datum.maxYear"}
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "white",
        "strokeWidth": 0.8,
        "fillOpacity": 0.85
      },
      "encoding": {
        "color": {
          "field": "properties.protection_rate_pct",
          "type": "quantitative",
          "scale": {
            "scheme": "blues",
            "domain": [0, 2]
          },
          "legend": {
            "title": "% of EEZ Protected",
            "format": ".2f"
          }
        },
        "tooltip": [
          {
            "field": "properties.country_name",
            "type": "nominal",
            "title": "Country"
          },
          {
            "field": "properties.STATUS_YR",
            "type": "quantitative",
            "title": "Latest MPA Established"
          },
          {
            "field": "properties.protection_rate_pct",
            "type": "quantitative",
            "title": "% Protected",
            "format": ".2f"
          },
          {
            "field": "properties.num_mpas",
            "type": "quantitative",
            "title": "Total MPAs"
          },
          {
            "field": "properties.cumulative_area",
            "type": "quantitative",
            "title": "Protected Area (kmÂ²)",
            "format": ",.0f"
          }
        ]
      }
    }
  ],
  "config": {}
}