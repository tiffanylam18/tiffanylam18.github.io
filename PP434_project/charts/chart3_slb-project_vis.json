{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 350,
  "height": 250,
  "title": {
    "text": "Solomon Islands: On Track for Only 0.07% Protection by 2030",
    "subtitle": ["1,537-fold acceleration required to meet 30% target", "", "Marine Protected Area (% of EEZ)"],
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tiffanylam18/tiffanylam18.github.io/refs/heads/main/PP434_project/data/chart3_regression.json"
  },
  "transform": [{"filter": "datum.country_name == 'Solomon Islands'"}],
  "layer": [
    {
      "transform": [{"filter": "datum.is_projection == false"}],
      "mark": {"type": "area", "opacity": 0.2, "color": "#3498db"},
      "encoding": {
        "x": {
          "field": "year",
          "type": "quantitative",
          "scale": {"domain": [1977, 2030]},
          "title": "",
          "axis": {"format": "d"}
        },
        "y": {
          "field": "ci_lower",
          "type": "quantitative",
          "title": "",
          "scale": {"domain": [0, 30]}
        },
        "y2": {"field": "ci_upper"}
      }
    },
    {
      "transform": [{"filter": "datum.is_projection == true"}],
      "mark": {"type": "area", "opacity": 0.15, "color": "#95a5a6"},
      "encoding": {
        "x": {"field": "year", "type": "quantitative"},
        "y": {"field": "ci_lower", "type": "quantitative"},
        "y2": {"field": "ci_upper"}
      }
    },
    {
      "transform": [{"filter": "datum.actual_value != null"}],
      "mark": {
        "type": "point",
        "filled": true,
        "size": 100,
        "color": "#2c3e50"
      },
      "encoding": {
        "x": {"field": "year", "type": "quantitative"},
        "y": {
          "field": "actual_value",
          "type": "quantitative",
          "axis": {"format": "%", "labelExpr": "datum.value + '%'"}
        },
        "tooltip": [
          {"field": "year", "type": "quantitative", "title": "Year"},
          {
            "field": "actual_value",
            "type": "quantitative",
            "title": "% Protected",
            "format": ".3f"
          }
        ]
      }
    },
    {
      "transform": [{"filter": "datum.is_projection == false"}],
      "mark": {"type": "line", "strokeWidth": 3, "color": "#3498db"},
      "encoding": {
        "x": {"field": "year", "type": "quantitative"},
        "y": {"field": "predicted_value", "type": "quantitative"}
      }
    },
    {
      "transform": [{"filter": "datum.is_projection == true"}],
      "mark": {
        "type": "line",
        "strokeWidth": 3,
        "strokeDash": [8, 4],
        "color": "#95a5a6"
      },
      "encoding": {
        "x": {"field": "year", "type": "quantitative"},
        "y": {"field": "predicted_value", "type": "quantitative"}
      }
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [5, 5],
        "color": "#e74c3c",
        "size": 2
      },
      "encoding": {"y": {"datum": 10}}
    },
    {
      "mark": {
        "type": "rule",
        "strokeDash": [5, 5],
        "color": "#c0392b",
        "size": 2
      },
      "encoding": {"y": {"datum": 30}}
    },
    {
      "data": {
        "values": [{"x": 1977, "y": 11, "label": "10% Target (2020)"}]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 11,
        "color": "#e74c3c"
      },
      "encoding": {
        "x": {"field": "x", "type": "quantitative"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "label"}
      }
    },
    {
      "data": {
        "values": [{"x": 1977, "y": 31, "label": "30% Target (2030)"}]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 11,
        "color": "#c0392b"
      },
      "encoding": {
        "x": {"field": "x", "type": "quantitative"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "label"}
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 2022.5,
            "y": 1.5,
            "label": "Current anual growth: 0.002% per year"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 10,
        "color": "#34495e",
        "fontStyle": "italic"
      },
      "encoding": {
        "x": {"field": "x", "type": "quantitative"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "label"}
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 2022.5,
            "y": 11,
            "label": "Growth needed: 0.90% per year (510x faster)"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 10,
        "color": "#e74c3c",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"field": "x", "type": "quantitative"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "label"}
      }
    },
    {
      "data": {
        "values": [
          {
            "x": 2022.5,
            "y": 31,
            "label": "Growth needed: 2.72% per year (1,537x faster)"
          }
        ]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "fontSize": 10,
        "color": "#c0392b",
        "fontWeight": "bold"
      },
      "encoding": {
        "x": {"field": "x", "type": "quantitative"},
        "y": {"field": "y", "type": "quantitative"},
        "text": {"field": "label"}
      }
    }
  ],
  "config": {
    "background": "#ffffff",
    "font": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
    "view": {"stroke": "transparent"},"title": {
      "font": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "fontSize": 16,
      "fontWeight": 600,
      "color": "#1e293b",
      "anchor": "start",
      "subtitleFontSize": 12,
      "subtitleColor": "#475569","subtitleFontWeight": 400
      },
    "axis": {
      "labelFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "labelFontSize": 11,
      "labelColor": "#64748b",
      "titleFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "titleFontSize": 12,
      "titleColor": "#334155",
      "grid": false,
      "gridColor": "#e2e8f0",
      "gridOpacity": 0.5,
      "domain": true,
      "ticks": true
      },
    "legend": {
      "labelFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "labelFontSize": 11,
      "labelColor": "#475569",
      "titleFont": "DM Sans, -apple-system, BlinkMacSystemFont, Segoe UI, Roboto, sans-serif",
      "titleFontSize": 12,
      "titleColor": "#334155"
    }
  }
}