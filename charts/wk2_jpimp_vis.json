{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Imports",
    "anchor": "start",
    "subtitle": "Current USD | Source: JSB (WB) through ECO API",
    "fontSize": "14",
    "subtitleFontSize": "12",
    "color": "#000000",
    "subtitleColor": "#000000"
  },
  "height": "250",
  "width": "container",
  "autosize": {"type": "fit", "contains": "padding", "resize": false},
  "background": "#ffffff",
  "view": {"fill": "#ffffff", "strokeOpacity": 0},
  "data": {
    "url": "https://api.economicsobservatory.com/jpn/impo?vega",
    "format": {"type": "json"}
  },
  "transform": [
    {"calculate": "datum['value']/1000000000", "as": "value (billions)"}
  ],
  "mark": {"type": "line", "color": "#2f5fd0", "strokeWidth": "2"},
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "axis": {"title": "", "titleColor": "#122B39", "grid": false}
    },
    "y": {
      "field": "value (billions)",
      "type": "quantitative",
      "axis": {"title": "(billions)", "titleColor": "#122B39", "grid": false}
    }
  },
  "config": {}
}