{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "title": {
    "text": "Climate Responsibility: Per Capita CO₂ Emissions by Country",
    "subtitle": "Key players in global climate negotiations, from highest per capita emitters to largest populations",
    "subtitleColor": "gray",
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tiffanylam18/tiffanylam18.github.io/refs/heads/main/data/wk2_co-emissions-per-capita.csv"
  },
  "transform": [
    {"filter": "datum.Entity!=='World'"},
    {"filter": "datum.Year >= 1993"},
    {
      "filter": "indexof(['Qatar', 'United States', 'Canada', 'Australia', 'Russia', 'South Korea', 'Germany', 'China', 'Japan', 'India'], datum.Entity) >= 0"
    },
    {
      "joinaggregate": [
        {
          "op": "mean",
          "field": "Annual CO₂ emissions (per capita)",
          "as": "avg_emissions"
        }
      ],
      "groupby": ["Entity"]
    },
    {
      "joinaggregate": [
        {
          "op": "sum",
          "field": "Annual CO₂ emissions (per capita)",
          "as": "year_total"
        }
      ],
      "groupby": ["Year"]
    },
    {
      "calculate": "(datum['Annual CO₂ emissions (per capita)'] / datum.year_total) * 100",
      "as": "pct_of_total"
    }
  ],
  "mark": {"type": "bar", "opacity": 0.9},
  "encoding": {
    "x": {
      "field": "Year",
      "type": "ordinal",
      "axis": {"labelAngle": -45, "title": null}
    },
    "y": {
      "field": "Annual CO₂ emissions (per capita)",
      "type": "quantitative",
      "aggregate": "sum",
      "axis": {"title": "Annual Emissions (Per Capita)"}
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "sort": {
        "field": "Annual CO₂ emissions (per capita)",
        "op": "mean",
        "order": "descending"
      }
    },
    "order": {
      "field": "avg_emissions",
      "type": "quantitative",
      "sort": "ascending"
    },
    "tooltip": [
      {"field": "Year", "type": "ordinal", "title": "Year"},
      {"field": "Entity", "title": "Country"},
      {"field": "Annual CO₂ emissions (per capita)", "title": "Emissions (per capita)", "format": ".2f"},
      {"field": "pct_of_total", "title": "Share of Total (%)", "format": ".1f"}
    ]
  },
  "config": {}
}