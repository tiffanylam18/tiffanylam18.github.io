{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "width": 300,
  "height": 200,
  "title": {
    "text": "Temperature Trends: Manila",
    "subtitle": "Daily observations, 2014-2024",
    "anchor": "start"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tiffanylam18/tiffanylam18.github.io/refs/heads/main/data/wk6_temp_MNL.json",
    "format": {"type": "json", "property": "daily"}
  },
  "transform": [
    {"flatten": ["time", "temperature_2m_mean"]},
    {"filter": "datum.temperature_2m_mean != null"},
    {"calculate": "toDate(datum.time)", "as": "date"}
  ],
  "layer": [
    {
      "mark": {
        "type": "line",
        "color": "#FF6347",
        "strokeWidth": 1,
        "opacity": 0.6
      },
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "axis": {"title": null, "domain": false, "grid": false}
        },
        "y": {
          "field": "temperature_2m_mean",
          "type": "quantitative",
          "scale": {"domain": [15, 35]},
          "axis": {"title": "Temperature (Â°C)", "domain": false}
        }
      }
    },
    {
      "mark": {"type": "line", "color": "#8B0000", "strokeWidth": 3},
      "transform": [
        {"loess": "temperature_2m_mean", "on": "date", "bandwidth": 0.1}
      ],
      "encoding": {
        "x": {"field": "date", "type": "temporal"},
        "y": {"field": "temperature_2m_mean", "type": "quantitative"}
      }
    }
  ],
  "config": {}
}